extends layout/layout-admin

block vars
	-title = 'Admin'
	-bodyClass = 'page-home'
	-isAdmin = 'true'

block container 
	.admin-heading
		h1.admin-title Đăng tin rao vặt mới
	.admin-form 
		.admin-wrapper
			.admin-block
				.admin-heading-second.t-center
					h2.admin-title-second THÔNG TIN CHUNG
				.f-list.row.layout-first
					.f-item.col.col-4
						+AdminLabel("Chọn loại tin cần đăng")
						+AdminSelect(
							[
								"Cho thuê bất động sản",
								"Sang nhượng kinh doanh",
								"Event - Sự kiện",
								"Việc làm",
								"Bán bất động sản",
								"Rao vặt khác"
							]
						)
					.f-item.col.col-8
						+AdminLabel("Link URL")
						.f-copy
							input.admin-input(type="text" value="vietinfo.com/my-post-title")
							+img("ic-copy.svg")
			.admin-block
				.admin-heading-second.t-center
						h2.admin-title-second THÔNG TIN CHI TIẾT
				.f-list.row.layout-four
					.f-item.col.col-4
						+AdminLabel("Loại hình sử dụng")
						+AdminSelect(
							[
								"Văn phòng - toà nhà thương mại",
								"Sang nhượng kinh doanh",
								"Event - Sự kiện",
								"Việc làm",
								"Bán bất động sản",
								"Rao vặt khác"
							]
						)
					.f-item.col.col-4
						+AdminLabel("Tên trung tâm thương mại")
						input.admin-input(type="text" value="ABC COMPLEX BUILDING")
					.f-item.col.col-2
						+AdminLabel("Giá thuê")
						.f-left
							.f-left-ic $
							input.admin-input(type="text" value="300")
					.f-item.col.col-2.flex-center
						.admin-check-flex.admin-check-posi
							label.admin-check
								input(type="radio" id="thuong-luong" name="thuong-luong" hidden)
								span.admin-check-radio
								span.txt Month
							label.admin-check
								input(type="radio" id="thuong-luong" name="thuong-luong" hidden)
								span.admin-check-radio
								span.txt Year
					.f-item.col.col-2
						+AdminLabel("Diện tích")
						.f-left.second
							.f-left-ic sqft
							input.admin-input(type="text" value="11,300")
					.f-item.col.col-2
						+AdminLabel("Built in")
						.f-left.second 
							.f-left-ic year
							input.admin-input(type="number" value="2015")
					.f-item.col.col-8.flex-center
						label.admin-check.admin-check-posi
							input(type="checkbox" id="Covered Parking" name="Covered Parking" hidden)
							span.admin-check-checkbox
							span.txt Covered Parking
					.f-item.col.col-4
						.f-flex
							.f-flex-item
								+AdminLabel("Price/SF From")
								.f-left
									span.f-left-ic $
									input.admin-input(type="number" value="1000")
							span.dot -
							.f-flex-item
								label.f-label 
									| Tới
									span.fw-4 #{" "} (optional)
								.f-left
									span.f-left-ic $
									input.admin-input(type="number" value="1000")
					.f-item.col.col-8.flex-center
						.admin-check-flex.admin-check-posi
							label.admin-check
								input(type="radio" id="thuong-luong" name="thuong-luong" hidden)
								span.admin-check-radio
								span.txt Month
							label.admin-check
								input(type="radio" id="thuong-luong" name="thuong-luong" hidden)
								span.admin-check-radio
								span.txt Year
					.f-item.col.col-6
						+AdminLabel("Address 1") 
						input.admin-input(type="text" placeholder="Street address")
					.f-item.col.col-6
						label.f-label
							| Address 2 
							span.fw-4 (optional)
						input.admin-input(type="text" placeholder="Apt, suite, unit, building, floor, etc.")
					.f-item.col.col-4
						+AdminLabel("City") 
						input.admin-input(type="text" value="Atlanta")
					.f-item.col.col-4
						+AdminLabel("State") 
						+AdminSelect(
							[
								"Georgia",
								"Georgia",
								"Georgia",
								"Georgia"
							]
						)
					.f-item.col.col-4
						+AdminLabel("Zip code") 
						input.admin-input(type="number" value="30062")
					.f-item.col
						+AdminLabel("Mô tả chi tiết") 
					.f-item.col 
						label.f-label.no-clamb
							| Ngày tin đăng hết hạn - expired 
							span.fw-4 (sau khi đăng tin, bất cứ lúc nào cũng có thể gia hạn thêm thông qua dashboard “quản lý tin rao vặt")
						.admin-date.f-left 
							+img("ic-calendar.svg")
							input.admin-input(type="text" value="" placeholder="Chọn ngày tháng bạn muốn tin này hết hiệu lực" name="datetimes")
					.f-item.col 
						+AdminLabel("Photos")
						+DropZone()
			+ThongTinLienHe()
			+Btn("Đăng bài", "button", "admin-btn")
mixin title(text,des, classCustom)
   if(!classCustom)
      .head
         h2.t-title 
            | #{text}
         if(des)
            p.t-des 
               | #{des}
   else 
      .head(class=classCustom)
         h2.t-title 
            | #{text}
         if(des)
            p.t-des 
               | #{des}
mixin Checker(type,shape,text,classCustom,num,name)
   if(num == "has")
      if (shape == "circle")
         label.checker(class=classCustom) 
            input(type=type, name=name)
            span.circle 
            span.txt #{text}
            span.num 12
      else 
         label.checker(class=classCustom) 
            input(type=type , name=name)
            span.sqr 
            span.txt #{text}
            span.num 12
   else
      if (shape == "circle")
         label.checker(class=classCustom) 
            input(type=type, name=name)
            span.circle 
            span.txt #{text}
      else 
         label.checker(class=classCustom) 
            input(type=type , name=name)
            span.sqr 
            span.txt #{text}

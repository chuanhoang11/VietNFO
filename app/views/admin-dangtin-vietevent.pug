extends layout/layout-admin

block vars
	-title = 'Admin'
	-bodyClass = 'page-home'
	-isAdmin = 'true'

block container 
	.admin-heading
		h1.admin-title Đăng tin rao vặt mới
	.admin-form 
		.admin-wrapper
			.admin-block
				.admin-heading-second.t-center
					h2.admin-title-second THÔNG TIN CHUNG
				.f-list.row.layout-first
					.f-item.col.col-6
						.f-list.row 
							.f-item.col.col-8 
								+AdminLabel("Chọn loại tin cần đăng")
								+AdminSelect(
									[
										"Event - Sự kiện",
										"Việc làm",
										"Sang nhượng kinh doanh",
										"Cho thuê bất động sản",
										"Bán bất động sản",
										" Rao vặt khác"
									]
								)
							.f-item.col.col-4
								+AdminLabel("Loại việc làm")
								+AdminSelect(
									[
										"Cộng đồng",
										"Hội nhóm",
										"Giải trí",
										"Thể thao"
									]
								)
					.f-item.col.col-6
						+AdminLabel("Tiêu đề tin đăng") 
						input.admin-input(placeholder="Nhập tiêu đề")
					.f-item.col.col-6
						+AdminLabel("Link URL")
						.f-copy
							input.admin-input(type="text" value="vietinfo.com/my-post-title")
							+img("ic-copy.svg")
			+ThongTinLienHe()
			.admin-block
				.admin-heading-second.t-center
						h2.admin-title-second THÔNG TIN CHI TIẾT
				.f-list.row.layout-second
					.f-item.col.col-6
						+AdminLabel("Thời gian")
						.admin-date.f-left 
							+img("ic-calendar.svg")
							input.admin-input(type="text" value="" placeholder="Chọn khoảng thời gian sự kiện diễn ra" name="datetimes")
					.f-item.col.col-6
						+AdminLabel("Địa điểm tổ chức")
						input.admin-input(type="text" value="Nhà thờ Việt Nam")
					.f-item.col.col-6
						+AdminLabel("Address 1") 
						input.admin-input(type="text" placeholder="Street address")
					.f-item.col.col-6
						label.f-label
							| Address 2 
							span.fw-4 (optional)
						input.admin-input(type="text" placeholder="Apt, suite, unit, building, floor, etc.")
					.f-item.col.col-4
						+AdminLabel("City") 
						input.admin-input(type="text" value="Atlanta")
					.f-item.col.col-4
						+AdminLabel("State") 
						+AdminSelect(
							[
								"Georgia",
								"Georgia",
								"Georgia",
								"Georgia"
							]
						)
					.f-item.col.col-4
						+AdminLabel("Zip code") 
						input.admin-input(type="number" value="30062")
					+MoTaChiTiet()
					.f-item.col 
						label.f-label.no-clamb
							| Ngày tin đăng hết hạn 
							span.fw-4 (có thể gia hạn thêm thông qua dashboard “quản lý tin rao vặt")
						
						.admin-date.f-left 
							+img("ic-calendar.svg")
							input.admin-input(type="text" value="" placeholder="Chọn ngày tháng tin hết hiệu lực" name="datetimes")
					.f-item.col 
						.f-label 
							| Flyer photo 
							span.fw-4 (upload một ảnh duy nhất)
						.drz-flex.row
							.drz-flex-item.col.col-6
								.dropzone#dropzone
									form(action="/upload")#dropzone-upload
										.dropzone-content 
											+img("ic-upload-pri.svg")
											p.title 
												| Kéo thả hình ảnh or 
												span.fw-6.c-pri Chọn và tải lên
											p.des Hoặc chọn ảnh cũ đã sử dụng lưu trong hệ thống để dùng lại
							.drz-flex-item.col.col-6
								.dropzone-wr.second
									.dropzone-img 
										+img("dropzone-img.jpg")
									.dropzone-ct
										.dropzone-top 
											.content 
												p.dropzone-title.fw-6 cover image.jpg
												p.dropzone-des 500kb
											.dropzone-delete
												+img("ic-delete-2.svg")
			+Btn("Đăng bài", "button", "admin-btn")

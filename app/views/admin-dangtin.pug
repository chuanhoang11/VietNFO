extends layout/layout-admin

block vars
	-title = 'Admin'
	-bodyClass = 'page-home'
	-isAdmin = 'true'

block container 
	.admin-heading
		h1.admin-title Đăng tin rao vặt mới
	.admin-form 
		form(action="")
			.admin-wrapper
				.admin-block
					.admin-heading-second.t-center
						h2.admin-title-second THÔNG TIN CHUNG
					.f-list.row 
						.f-item.col.col-6
							.f-list.row 
								.f-item.col.col-8 
									+AdminLabel("Chọn loại tin cần đăng")
									+AdminSelect(
										[
											"Việc làm",
											"Sang nhượng kinh doanh",
											"Event - Sự kiện",
											"Cho thuê bất động sản",
											"Bán bất động sản",
											" Rao vặt khác"
										]
									)
								.f-item.col.col-4
									+AdminLabel("Loại việc làm")
									+AdminSelect(
										[
											"Làm nail",
											"Nhà hàng",
											"Văn phòng",
											"Việc khác"
										]
									)
						.f-item.col.col-6
							+AdminLabel("Tiêu đề tin đăng") 
							input.admin-input(placeholder="Nhập tiêu đề")
						.f-item.col.col-6
							+AdminLabel("Link URL")
							.f-copy
								+AdminInput(value="vietinfo.com/my-post-title")
								+img("ic-copy.svg")
